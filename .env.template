# CoreTet Band - Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# Gemini API Key (for AI features)
GEMINI_API_KEY=your_gemini_api_key_here

# Debug mode for AI agents
DEBUG_AGENTS=true

# Supabase Configuration
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Authentication Mode (password | email | test)
VITE_AUTH_MODE=password

# Test phone numbers for development (format: "+1234567890:123456,+1234567891:234567")
VITE_TEST_CODES="+1234567890:123456"

# Development Email Bypass
VITE_SKIP_EMAIL_CONFIRMATION=true

# Offline Development Mode
VITE_OFFLINE_MODE=false

# Clerk Authentication
VITE_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key
