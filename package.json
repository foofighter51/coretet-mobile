{
  "name": "@coretet/design-system",
  "version": "1.0.0",
  "description": "CoreTet Design System - Complete component library for music collaboration platforms",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "files": [
    "src/",
    "design-tokens-complete.json",
    "react-native-complete/",
    "storybook-stories-complete/",
    "visual-assets/",
    "implementation-guide.md",
    "test-specifications.md"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:tokens": "node scripts/build-tokens.js",
    "build:rn": "cd react-native-complete && npm run build",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:qa": "jest --testPathPattern=design-consistency.test.tsx --verbose",
    "test:qa:watch": "jest --testPathPattern=design-consistency.test.tsx --watch --verbose",
    "test:qa:coverage": "jest --testPathPattern=design-consistency.test.tsx --coverage --verbose",
    "test:qa:ci": "jest --testPathPattern=design-consistency.test.tsx --ci --coverage --watchAll=false --passWithNoTests --verbose",
    "test:accessibility": "jest --testNamePattern=\"Accessibility\"",
    "test:visual": "jest --testNamePattern=\"Visual Consistency\"",
    "test:performance": "jest --testNamePattern=\"Performance\"",
    "test:cross-platform": "jest --testNamePattern=\"Responsive\"",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "validate": "npm run lint && npm run type-check && npm run test:qa",
    "validate:full": "npm run lint && npm run type-check && npm run test:qa && npm run test:accessibility && npm run test:performance",
    "release": "npm run validate:full && npm run build && npm run build-storybook",
    "docs": "typedoc src --out docs",
    "clean": "rimraf dist build storybook-static coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/coretet/design-system.git"
  },
  "keywords": [
    "design-system",
    "react",
    "react-native",
    "typescript",
    "components",
    "ui",
    "music",
    "collaboration",
    "rdio",
    "mobile-first",
    "accessibility",
    "a11y",
    "wcag",
    "storybook",
    "design-tokens",
    "atomic-design"
  ],
  "author": {
    "name": "CoreTet Design Team",
    "email": "design@coretet.com",
    "url": "https://coretet.com"
  },
  "license": "MIT",
  "homepage": "https://coretet.github.io/design-system",
  "bugs": {
    "url": "https://github.com/coretet/design-system/issues"
  },
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/coretet"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "peerDependenciesMeta": {
    "react-native": {
      "optional": true
    }
  },
  "dependencies": {
    "@capacitor/app": "^7.1.0",
    "@capacitor/cli": "^7.4.3",
    "@capacitor/core": "^7.4.3",
    "@capacitor/filesystem": "^7.1.4",
    "@capacitor/ios": "^7.4.3",
    "@capacitor/share": "^7.0.2",
    "@capacitor/status-bar": "^7.0.3",
    "@capawesome/capacitor-file-picker": "^7.2.0",
    "@google/generative-ai": "^0.24.1",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-progress": "^1.1.2",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.2",
    "@radix-ui/react-slider": "^1.2.3",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.3",
    "@supabase/supabase-js": "^2.58.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "framer-motion": "^11.0.0",
    "howler": "^2.2.4",
    "lamejs": "^1.2.1",
    "lucide-react": "^0.263.1",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "react-router-dom": "^7.9.3",
    "tailwind-merge": "^1.14.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@emotion/jest": "^11.11.0",
    "@storybook/addon-a11y": "^7.4.0",
    "@storybook/addon-backgrounds": "^7.4.0",
    "@storybook/addon-controls": "^7.4.0",
    "@storybook/addon-docs": "^7.4.0",
    "@storybook/addon-essentials": "^7.4.0",
    "@storybook/addon-interactions": "^7.4.0",
    "@storybook/addon-links": "^7.4.0",
    "@storybook/addon-measure": "^7.4.0",
    "@storybook/addon-outline": "^7.4.0",
    "@storybook/addon-viewport": "^7.4.0",
    "@storybook/blocks": "^7.4.0",
    "@storybook/react": "^7.4.0",
    "@storybook/react-vite": "^7.4.0",
    "@storybook/testing-library": "^0.2.0",
    "@tailwindcss/postcss": "^4.1.13",
    "@testing-library/jest-dom": "^6.1.3",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/howler": "^2.2.12",
    "@types/jest": "^29.5.5",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "eslint-plugin-storybook": "^0.6.13",
    "jest": "^29.7.0",
    "jest-axe": "^8.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^16.0.0",
    "lucide-react": "^0.263.1",
    "postcss": "^8.5.6",
    "puppeteer": "^24.22.3",
    "rimraf": "^5.0.0",
    "tailwindcss": "^4.0.0-alpha.5",
    "ts-jest": "^29.1.1",
    "typedoc": "^0.25.0",
    "typescript": "^5.0.2",
    "vite": "^4.4.5"
  },
  "optionalDependencies": {
    "react-native": ">=0.72.0"
  },
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "require": "./src/index.ts",
      "types": "./src/index.ts"
    },
    "./tokens": {
      "import": "./design-tokens-complete.json",
      "require": "./design-tokens-complete.json"
    },
    "./react-native": {
      "import": "./react-native-complete/index.ts",
      "require": "./react-native-complete/index.ts",
      "types": "./react-native-complete/index.ts"
    },
    "./styles": {
      "import": "./src/design/index.ts",
      "require": "./src/design/index.ts"
    }
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run validate",
      "pre-push": "npm run test:qa:ci"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/src/tests/setup.ts"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.(ts|tsx|js|jsx)",
      "<rootDir>/src/**/*.(test|spec).(ts|tsx|js|jsx)"
    ],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "collectCoverageFrom": [
      "src/components/**/*.(ts|tsx)",
      "src/design/**/*.(ts|tsx)",
      "!src/**/*.d.ts",
      "!src/**/*.stories.(ts|tsx)",
      "!src/tests/**/*"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 85,
        "functions": 85,
        "lines": 85,
        "statements": 85
      }
    }
  },
  "storybook": {
    "stories": [
      "storybook-stories-complete/**/*.stories.@(js|jsx|mjs|ts|tsx)",
      "src/stories/**/*.stories.@(js|jsx|mjs|ts|tsx)"
    ],
    "addons": [
      "@storybook/addon-essentials",
      "@storybook/addon-a11y",
      "@storybook/addon-viewport",
      "@storybook/addon-measure",
      "@storybook/addon-outline"
    ]
  },
  "designSystem": {
    "version": "1.0.0",
    "name": "CoreTet",
    "description": "Music collaboration design system",
    "platform": [
      "web",
      "react-native"
    ],
    "tokens": "./design-tokens-complete.json",
    "components": "./src/components",
    "documentation": "./implementation-guide.md",
    "tests": "./test-specifications.md",
    "specifications": {
      "spacing": "8px grid system",
      "colors": "Exact hex values only",
      "typography": "SF Pro Display baseline grid",
      "accessibility": "WCAG AA compliant",
      "mobile": "375px base, 44px touch targets",
      "performance": "60fps animations, <100ms renders"
    }
  },
  "contributors": [
    {
      "name": "CoreTet Design Team",
      "email": "design@coretet.com",
      "url": "https://coretet.com/team"
    }
  ],
  "changelog": {
    "v1.0.0": {
      "date": "2024-12-19",
      "changes": [
        "Initial release with complete component library",
        "100% design consistency achieved",
        "WCAG AA accessibility compliance",
        "React and React Native support",
        "Comprehensive QA test suite",
        "Complete Storybook documentation"
      ]
    }
  }
}
